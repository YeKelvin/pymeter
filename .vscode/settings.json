{
    /* vscode */
    "files.insertFinalNewline": true,
    "files.exclude": {
        "**/.idea": true,
        "**/.pytest_cache": true,
        "**/__pycache__": true,
    },
    "files.watcherExclude": {
        "**/.cache": true
    },
    "todo-tree.filtering.excludeGlobs": [
        "**/.cache"
    ],

    // "python.pythonPath": "path/to/your/python",

    /* Python Lint */
    "python.linting.flake8Enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.lintOnSave": true,
    "python.formatting.provider": "yapf",

    /* Python Test Framework */
    "python.testing.cwd": "${workspaceFolder}",
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.testing.nosetestsEnabled": false,
    "python.languageServer": "Pylance",

    /* Code Runner */
    "code-runner.executorMap": {
        "python": "$pythonPath -u $fullFileName",
    },
    "code-runner.saveFileBeforeRun": true,
    "code-runner.runInTerminal": true,

    /* 将项目路径添加到python path中 */
    "terminal.integrated.env.windows": {
        "PYTHONPATH": "${workspaceFolder}"
    },
    "terminal.integrated.env.osx": {
        "PYTHONPATH": "${workspaceFolder}"
    },
    "terminal.integrated.env.linux": {
        "PYTHONPATH": "${workspaceFolder}"
    },
    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#e4b849",
        "activityBar.activeBorder": "#158b69",
        "activityBar.background": "#e4b849",
        "activityBar.foreground": "#15202b",
        "activityBar.inactiveForeground": "#15202b99",
        "activityBarBadge.background": "#158b69",
        "activityBarBadge.foreground": "#e7e7e7",
        "statusBar.background": "#daa520",
        "statusBar.foreground": "#15202b",
        "statusBarItem.hoverBackground": "#ad8319",
        "titleBar.activeBackground": "#daa520",
        "titleBar.activeForeground": "#15202b",
        "titleBar.inactiveBackground": "#daa52099",
        "titleBar.inactiveForeground": "#15202b99"
    },
    "peacock.color": "#DAA520"
}
