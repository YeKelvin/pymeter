{
    /* vscode */
    "files.exclude": {
        "**/.idea": true,
        "**/.pytest_cache": true,
        "**/__pycache__": true,
    },
    "files.watcherExclude": {
        "**/.cache": true
    },
    "todo-tree.filtering.excludeGlobs": [
        "**/.cache"
    ],

    /* Python Lint */
    "python.linting.flake8Enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.lintOnSave": true,
    "python.formatting.provider": "yapf",

    /* Python Test Framework */
    "python.testing.cwd": "${workspaceFolder}",
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.languageServer": "Pylance",

    /* Code Runner */
    "code-runner.executorMap": {
        "python": "$pythonPath -u $fullFileName",
    },
    "code-runner.saveFileBeforeRun": true,
    "code-runner.runInTerminal": true,

    /* 将项目路径添加到python path中 */
    "terminal.integrated.env.windows": {
        "PYTHONPATH": "${workspaceFolder}"
    },
    "terminal.integrated.env.osx": {
        "PYTHONPATH": "${workspaceFolder}"
    },
    "terminal.integrated.env.linux": {
        "PYTHONPATH": "${workspaceFolder}"
    },
    "workbench.colorCustomizations": {
        "activityBar.activeBorder": "#2a6e3f",
        "activityBar.activeBackground": "#a64036",
        "activityBar.background": "#a62228",
        "activityBar.foreground": "#e7e7e7",
        "activityBar.inactiveForeground": "#e7e7e799",
        "activityBarBadge.background": "#269f21",
        "activityBarBadge.foreground": "#e7e7e7",
        "commandCenter.border": "#e7e7e799",
        "sash.hoverBorder": "#a62228",
        "statusBar.background": "#7c191e",
        "statusBar.foreground": "#e7e7e7",
        "statusBarItem.hoverBackground": "#a62228",
        "statusBarItem.remoteBackground": "#7c191e",
        "statusBarItem.remoteForeground": "#e7e7e7",
        "titleBar.activeBackground": "#7c191e",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.inactiveBackground": "#7c191e99",
        "titleBar.inactiveForeground": "#e7e7e799"
    },
    "peacock.color": "#7c191e"
}
